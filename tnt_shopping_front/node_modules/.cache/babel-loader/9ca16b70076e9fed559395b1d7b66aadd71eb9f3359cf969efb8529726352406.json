{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport \"core-js/modules/esnext.json.parse.js\";\nimport { ref, computed, onMounted } from 'vue';\nimport { useRouter } from 'vue-router';\nimport IndexPage from '../components/IndexPage.vue';\nimport CategoryPage from '../components/CategoryPage.vue';\n\n// 为了演示，先创建简单的占位组件，实际开发可以拆分为独立文件\n\nexport default {\n  __name: 'Home',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const CartPage = {\n      template: '<div class=\"placeholder-page\">购物车空空如也</div>'\n    };\n    const ProfilePage = {\n      template: '<div class=\"placeholder-page\">个人中心信息展示</div>'\n    };\n    const router = useRouter();\n    const username = ref('User');\n    const currentTab = ref('Index'); // 默认首页\n\n    // 计算当前应该渲染哪个组件\n    const currentComponent = computed(() => {\n      switch (currentTab.value) {\n        case 'Index':\n          return IndexPage;\n        case 'Category':\n          return CategoryPage;\n        case 'Cart':\n          return CartPage;\n        case 'Profile':\n          return ProfilePage;\n        default:\n          return IndexPage;\n      }\n    });\n    onMounted(() => {\n      const userStr = localStorage.getItem('user');\n      if (userStr) {\n        try {\n          const user = JSON.parse(userStr);\n          username.value = user.username;\n        } catch (e) {\n          router.push('/login');\n        }\n      } else {\n        router.push('/login');\n      }\n    });\n    const logout = () => {\n      localStorage.removeItem('user');\n      router.push('/login');\n    };\n    const __returned__ = {\n      CartPage,\n      ProfilePage,\n      router,\n      username,\n      currentTab,\n      currentComponent,\n      logout,\n      ref,\n      computed,\n      onMounted,\n      get useRouter() {\n        return useRouter;\n      },\n      IndexPage,\n      CategoryPage\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n