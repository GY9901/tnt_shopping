{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport \"core-js/modules/esnext.json.parse.js\";\nimport { ref, nextTick, onMounted } from 'vue';\nimport { ElMessage } from 'element-plus';\n\n// --- 留言板逻辑 ---\n\nexport default {\n  __name: 'IndexPage',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const newMessage = ref('');\n    const msgListRef = ref(null);\n    const currentUser = ref('User'); // 模拟当前用户\n\n    // 初始化一些假数据\n    const messages = ref([{\n      user: 'Admin',\n      text: '欢迎来到 TNT Space！请文明留言。',\n      time: '刚刚'\n    }, {\n      user: '爆米花01',\n      text: '新专辑什么时候发货呀？期待！',\n      time: '1分钟前'\n    }]);\n\n    // 获取当前登录用户名\n    onMounted(() => {\n      const userStr = localStorage.getItem('user');\n      if (userStr) {\n        try {\n          const u = JSON.parse(userStr);\n          currentUser.value = u.username;\n        } catch (e) {}\n      }\n    });\n    const postMessage = () => {\n      if (!newMessage.value.trim()) {\n        ElMessage.warning('请输入留言内容');\n        return;\n      }\n      const now = new Date();\n      const timeString = `${now.getHours().toString().padStart(2, '0')}:${now.getMinutes().toString().padStart(2, '0')}`;\n      messages.value.push({\n        user: currentUser.value,\n        text: newMessage.value,\n        time: timeString\n      });\n      newMessage.value = '';\n      ElMessage.success('留言发布成功');\n\n      // 滚动到底部\n      nextTick(() => {\n        if (msgListRef.value) {\n          msgListRef.value.scrollTop = msgListRef.value.scrollHeight;\n        }\n      });\n    };\n    const __returned__ = {\n      newMessage,\n      msgListRef,\n      currentUser,\n      messages,\n      postMessage,\n      ref,\n      nextTick,\n      onMounted,\n      get ElMessage() {\n        return ElMessage;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","nextTick","onMounted","ElMessage","newMessage","msgListRef","currentUser","messages","user","text","time","userStr","localStorage","getItem","u","JSON","parse","value","username","e","postMessage","trim","warning","now","Date","timeString","getHours","toString","padStart","getMinutes","push","success","scrollTop","scrollHeight"],"sources":["E:/xianyu/tnt/tnt_shopping_front/src/components/IndexPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"index-container\">\r\n\r\n    <!-- 模块一：顶部大轮播图 -->\r\n    <div class=\"top-section\">\r\n      <el-carousel trigger=\"click\" height=\"300px\" class=\"main-carousel\">\r\n        <el-carousel-item v-for=\"item in 3\" :key=\"item\">\r\n          <div class=\"carousel-content\">\r\n            <h1 class=\"carousel-text\">TNT NEW ARRIVAL {{ item }}</h1>\r\n            <p class=\"carousel-sub\">2025 SUMMER COLLECTION</p>\r\n          </div>\r\n        </el-carousel-item>\r\n      </el-carousel>\r\n    </div>\r\n\r\n    <!-- 模块二：底部左右分栏 -->\r\n    <div class=\"bottom-section\">\r\n\r\n      <!-- 左侧：双层小轮播图 -->\r\n      <div class=\"left-col\">\r\n        <!-- 左上轮播 -->\r\n        <div class=\"sub-carousel-wrapper\">\r\n          <div class=\"section-title\">EXCLUSIVE / 独家花絮</div>\r\n          <el-carousel indicator-position=\"none\" arrow=\"always\" height=\"180px\">\r\n            <el-carousel-item v-for=\"i in 3\" :key=\"i\">\r\n              <div class=\"sub-carousel-content bg-black\">\r\n                <span>BEHIND THE SCENE {{ i }}</span>\r\n              </div>\r\n            </el-carousel-item>\r\n          </el-carousel>\r\n        </div>\r\n\r\n        <!-- 左下轮播 -->\r\n        <div class=\"sub-carousel-wrapper\">\r\n          <div class=\"section-title\">HOT SALES / 热销单品</div>\r\n          <el-carousel indicator-position=\"none\" arrow=\"always\" height=\"180px\">\r\n            <el-carousel-item v-for=\"i in 3\" :key=\"i\">\r\n              <div class=\"sub-carousel-content bg-yellow\">\r\n                <span>TOP SELLING {{ i }}</span>\r\n              </div>\r\n            </el-carousel-item>\r\n          </el-carousel>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- 右侧：留言板 -->\r\n      <div class=\"right-col\">\r\n        <div class=\"message-board\">\r\n          <div class=\"board-header\">\r\n            <h3>MESSAGE BOARD</h3>\r\n            <span class=\"count\">{{ messages.length }} MESSAGES</span>\r\n          </div>\r\n\r\n          <!-- 留言列表区 -->\r\n          <div class=\"message-list\" ref=\"msgListRef\">\r\n            <div v-if=\"messages.length === 0\" class=\"empty-state\">\r\n              暂无留言，快来抢沙发~\r\n            </div>\r\n            <div v-else class=\"msg-item\" v-for=\"(msg, index) in messages\" :key=\"index\">\r\n              <div class=\"msg-avatar\">\r\n                {{ msg.user.charAt(0).toUpperCase() }}\r\n              </div>\r\n              <div class=\"msg-content\">\r\n                <div class=\"msg-user\">{{ msg.user }} <span class=\"msg-time\">{{ msg.time }}</span></div>\r\n                <div class=\"msg-text\">{{ msg.text }}</div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n\r\n          <!-- 输入区 -->\r\n          <div class=\"input-area\">\r\n            <el-input\r\n                v-model=\"newMessage\"\r\n                placeholder=\"写下你的应援留言...\"\r\n                @keyup.enter=\"postMessage\"\r\n                class=\"tnt-input\"\r\n            >\r\n              <template #append>\r\n                <el-button @click=\"postMessage\" class=\"send-btn\">SEND</el-button>\r\n              </template>\r\n            </el-input>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script setup>\r\nimport { ref, nextTick, onMounted } from 'vue'\r\nimport { ElMessage } from 'element-plus'\r\n\r\n// --- 留言板逻辑 ---\r\nconst newMessage = ref('')\r\nconst msgListRef = ref(null)\r\nconst currentUser = ref('User') // 模拟当前用户\r\n\r\n// 初始化一些假数据\r\nconst messages = ref([\r\n  { user: 'Admin', text: '欢迎来到 TNT Space！请文明留言。', time: '刚刚' },\r\n  { user: '爆米花01', text: '新专辑什么时候发货呀？期待！', time: '1分钟前' }\r\n])\r\n\r\n// 获取当前登录用户名\r\nonMounted(() => {\r\n  const userStr = localStorage.getItem('user')\r\n  if (userStr) {\r\n    try {\r\n      const u = JSON.parse(userStr)\r\n      currentUser.value = u.username\r\n    } catch(e) {}\r\n  }\r\n})\r\n\r\nconst postMessage = () => {\r\n  if (!newMessage.value.trim()) {\r\n    ElMessage.warning('请输入留言内容')\r\n    return\r\n  }\r\n\r\n  const now = new Date()\r\n  const timeString = `${now.getHours().toString().padStart(2,'0')}:${now.getMinutes().toString().padStart(2,'0')}`\r\n\r\n  messages.value.push({\r\n    user: currentUser.value,\r\n    text: newMessage.value,\r\n    time: timeString\r\n  })\r\n\r\n  newMessage.value = ''\r\n  ElMessage.success('留言发布成功')\r\n\r\n  // 滚动到底部\r\n  nextTick(() => {\r\n    if (msgListRef.value) {\r\n      msgListRef.value.scrollTop = msgListRef.value.scrollHeight\r\n    }\r\n  })\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.index-container {\r\n  width: 100%;\r\n  max-width: 1200px; /* 限制最大宽度，防止大屏太散 */\r\n  margin: 0 auto;\r\n}\r\n\r\n/* --- 顶部大轮播 --- */\r\n.top-section {\r\n  margin-bottom: 20px;\r\n  border: 2px solid #000;\r\n}\r\n\r\n.carousel-content {\r\n  width: 100%;\r\n  height: 100%;\r\n  background-color: #FAD02C; /* 应援黄 */\r\n  display: flex;\r\n  flex-direction: column;\r\n  justify-content: center;\r\n  align-items: center;\r\n  color: #000;\r\n  /* 模拟纹理 */\r\n  background-image: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(0,0,0,0.05) 10px, rgba(0,0,0,0.05) 20px);\r\n}\r\n\r\n.carousel-text {\r\n  font-size: 48px;\r\n  font-weight: 900;\r\n  margin: 0;\r\n  font-family: 'Anton', sans-serif;\r\n  letter-spacing: 2px;\r\n}\r\n\r\n.carousel-sub {\r\n  font-size: 16px;\r\n  font-weight: bold;\r\n  letter-spacing: 4px;\r\n  border-top: 2px solid #000;\r\n  padding-top: 10px;\r\n  margin-top: 10px;\r\n}\r\n\r\n/* --- 底部左右分栏 --- */\r\n.bottom-section {\r\n  display: flex;\r\n  gap: 20px;\r\n  height: 450px; /* 固定高度确保对齐 */\r\n}\r\n\r\n/* 左侧列 */\r\n.left-col {\r\n  flex: 1; /* 占据剩余空间 */\r\n  display: flex;\r\n  flex-direction: column;\r\n  gap: 20px;\r\n}\r\n\r\n.sub-carousel-wrapper {\r\n  flex: 1;\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n.section-title {\r\n  font-size: 14px;\r\n  font-weight: bold;\r\n  background: #000;\r\n  color: #FAD02C;\r\n  padding: 5px 10px;\r\n  display: inline-block;\r\n  margin-bottom: 0;\r\n  width: fit-content;\r\n}\r\n\r\n.sub-carousel-content {\r\n  height: 100%;\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  font-weight: bold;\r\n  font-size: 24px;\r\n  border: 2px solid #000;\r\n}\r\n\r\n.bg-black {\r\n  background: #1A1A1A;\r\n  color: #FFF;\r\n}\r\n\r\n.bg-yellow {\r\n  background: #FFF;\r\n  color: #000;\r\n}\r\n\r\n/* 右侧列：留言板 */\r\n.right-col {\r\n  width: 350px; /* 固定宽度 */\r\n  border: 2px solid #000;\r\n  background: #FFF;\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n.message-board {\r\n  height: 100%;\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n.board-header {\r\n  background: #000;\r\n  color: #FAD02C;\r\n  padding: 15px;\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n}\r\n\r\n.board-header h3 {\r\n  margin: 0;\r\n  font-size: 18px;\r\n  font-weight: 900;\r\n}\r\n\r\n.count {\r\n  font-size: 12px;\r\n  background: #FAD02C;\r\n  color: #000;\r\n  padding: 2px 6px;\r\n  border-radius: 10px;\r\n  font-weight: bold;\r\n}\r\n\r\n.message-list {\r\n  flex: 1;\r\n  padding: 15px;\r\n  overflow-y: auto;\r\n  background: #FAFAFA;\r\n}\r\n\r\n.empty-state {\r\n  text-align: center;\r\n  color: #999;\r\n  margin-top: 50px;\r\n  font-size: 14px;\r\n}\r\n\r\n.msg-item {\r\n  display: flex;\r\n  margin-bottom: 15px;\r\n  animation: fadeIn 0.3s ease;\r\n}\r\n\r\n@keyframes fadeIn {\r\n  from { opacity: 0; transform: translateY(10px); }\r\n  to { opacity: 1; transform: translateY(0); }\r\n}\r\n\r\n.msg-avatar {\r\n  width: 36px;\r\n  height: 36px;\r\n  background: #000;\r\n  color: #FAD02C;\r\n  border-radius: 50%;\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  font-weight: bold;\r\n  margin-right: 10px;\r\n  flex-shrink: 0;\r\n}\r\n\r\n.msg-content {\r\n  background: #FFF;\r\n  border: 1px solid #EEE;\r\n  padding: 8px 12px;\r\n  border-radius: 0 10px 10px 10px;\r\n  box-shadow: 2px 2px 5px rgba(0,0,0,0.05);\r\n  max-width: 80%;\r\n}\r\n\r\n.msg-user {\r\n  font-size: 12px;\r\n  font-weight: bold;\r\n  color: #333;\r\n  margin-bottom: 4px;\r\n}\r\n\r\n.msg-time {\r\n  font-weight: normal;\r\n  color: #999;\r\n  margin-left: 5px;\r\n  font-size: 10px;\r\n}\r\n\r\n.msg-text {\r\n  font-size: 14px;\r\n  color: #555;\r\n  word-break: break-all;\r\n}\r\n\r\n.input-area {\r\n  padding: 15px;\r\n  border-top: 2px solid #000;\r\n  background: #FFF;\r\n}\r\n\r\n/* 覆盖 Element 样式以适配主题 */\r\n:deep(.tnt-input .el-input__wrapper) {\r\n  border-radius: 0;\r\n  box-shadow: none !important;\r\n  border: 2px solid #000;\r\n}\r\n\r\n:deep(.tnt-input .el-input-group__append) {\r\n  background-color: #000;\r\n  border: 2px solid #000;\r\n  border-left: 0;\r\n  color: #FAD02C;\r\n  border-radius: 0;\r\n  font-weight: bold;\r\n}\r\n\r\n:deep(.send-btn:hover) {\r\n  color: #FFF;\r\n}\r\n</style>"],"mappings":";;AA0FA,SAASA,GAAG,EAAEC,QAAQ,EAAEC,SAAS,QAAQ,KAAK;AAC9C,SAASC,SAAS,QAAQ,cAAc;;AAExC;;;;;;;;IACA,MAAMC,UAAU,GAAGJ,GAAG,CAAC,EAAE,CAAC;IAC1B,MAAMK,UAAU,GAAGL,GAAG,CAAC,IAAI,CAAC;IAC5B,MAAMM,WAAW,GAAGN,GAAG,CAAC,MAAM,CAAC,EAAC;;IAEhC;IACA,MAAMO,QAAQ,GAAGP,GAAG,CAAC,CACnB;MAAEQ,IAAI,EAAE,OAAO;MAAEC,IAAI,EAAE,uBAAuB;MAAEC,IAAI,EAAE;IAAK,CAAC,EAC5D;MAAEF,IAAI,EAAE,OAAO;MAAEC,IAAI,EAAE,gBAAgB;MAAEC,IAAI,EAAE;IAAO,CAAC,CACxD,CAAC;;IAEF;IACAR,SAAS,CAAC,MAAM;MACd,MAAMS,OAAO,GAAGC,YAAY,CAACC,OAAO,CAAC,MAAM,CAAC;MAC5C,IAAIF,OAAO,EAAE;QACX,IAAI;UACF,MAAMG,CAAC,GAAGC,IA