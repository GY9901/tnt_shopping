        </el-form-item>\r\n          <el-form-item prop=\"password\">\r\n            <el-input\r\n                v-model=\"loginForm.password\"\r\n                type=\"password\"\r\n                placeholder=\"请输入密码\"\r\n                show-password\r\n                :prefix-icon=\"Lock\"\r\n            />\r\n          </el-form-item>\r\n          <el-button\r\n              class=\"action-btn\"\r\n              :loading=\"loading\"\r\n              @click=\"handleLogin\"\r\n          >\r\n            立即登录\r\n          </el-button>\r\n        </el-form>\r\n\r\n        <el-form\r\n            v-else\r\n            ref=\"regFormRef\"\r\n            :model=\"regForm\"\r\n            :rules=\"regRules\"\r\n            class=\"custom-form\"\r\n            size=\"large\"\r\n        >\r\n          <el-form-item prop=\"username\">\r\n            <el-input\r\n                v-model=\"regForm.username\"\r\n                placeholder=\"设置账号\"\r\n                :prefix-icon=\"User\"\r\n            />\r\n          </el-form-item>\r\n          <el-form-item prop=\"password\">\r\n            <el-input\r\n                v-model=\"regForm.password\"\r\n                type=\"password\"\r\n                placeholder=\"设置密码\"\r\n                show-password\r\n                :prefix-icon=\"Lock\"\r\n            />\r\n          </el-form-item>\r\n          <el-form-item prop=\"confirmPass\">\r\n            <el-input\r\n                v-model=\"regForm.confirmPass\"\r\n                type=\"password\"\r\n                placeholder=\"确认密码\"\r\n                show-password\r\n                :prefix-icon=\"CircleCheck\"\r\n            />\r\n          </el-form-item>\r\n          <el-button\r\n              class=\"action-btn register-btn\"\r\n              :loading=\"loading\"\r\n              @click=\"handleRegister\"\r\n          >\r\n            注册账号\r\n          </el-button>\r\n        </el-form>\r\n\r\n        <div class=\"toggle-box\">\r\n          <span @click=\"toggleMode\">\r\n            {{ isRegister ? '已有账号？返回登录' : '没有账号？去注册' }}\r\n          </span>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script setup>\r\nimport { ref, reactive, getCurrentInstance } from 'vue'\r\nimport { useRouter } from 'vue-router'\r\nimport { ElMessage } from 'element-plus'\r\nimport { User, Lock, CircleCheck } from '@element-plus/icons-vue' // 显式引入图标用于变量绑定\r\n\r\nconst { proxy } = getCurrentInstance() // 获取全局实例(用于axios)\r\nconst router = useRouter()\r\n\r\n// 状态控制\r\nconst isRegister = ref(false)\r\nconst loading = ref(false)\r\n\r\n// 表单引用\r\nconst loginFormRef = ref(null)\r\nconst regFormRef = ref(null)\r\n\r\n// 登录数据\r\nconst loginForm = reactive({\r\n  username: '',\r\n  password: ''\r\n})\r\n\r\n// 注册数据\r\nconst regForm = reactive({\r\n  username: '',\r\n  password: '',\r\n  confirmPass: ''\r\n})\r\n\r\n// 校验规则\r\nconst rules = {\r\n  username: [{ required: true, message: '请输入账号', trigger: 'blur' }],\r\n  password: [{ required: true, message: '请输入密码', trigger: 'blur' }]\r\n}\r\n\r\n// 注册校验（包含二次密码比对）\r\nconst validatePass2 = (rule, value, callback) => {\r\n  if (value === '') {\r\n    callback(new Error('请再次输入密码'))\r\n  } else if (value !== regForm.password) {\r\n    callback(new Error('两次输入密码不一致!'))\r\n  } else {\r\n    callback()\r\n  }\r\n}\r\n\r\nconst regRules = {\r\n  username: [{ required: true, message: '请输入账号', trigger: 'blur' }],\r\n  password: [{ required: true, message: '请输入密码', trigger: 'blur' }],\r\n  confirmPass: [{ validator: validatePass2, trigger: 'blur' }]\r\n}\r\n\r\n// 切换模式\r\nconst toggleMode = () => {\r\n  isRegister.value = !isRegister.value\r\n  // 重置表单\r\n  loginFormRef.value?.resetFields()\r\n  regFormRef.value?.resetFields()\r\n}\r\n\r\n// 登录逻辑\r\nconst handleLogin = async () => {\r\n  if (!loginFormRef.value) return\r\n\r\n  await loginFormRef.value.validate(async (valid) => {\r\n    if (valid) {\r\n      loading.value = true\r\n      try {\r\n        const res = await proxy.$request.post('/user/login', loginForm)\r\n        if (res.data.code === '200') {\r\n          ElMessage.success('登录成功')\r\n          localStorage.setItem('user', JSON.stringify(res.data.data))\r\n          router.push('/home')\r\n        } else {\r\n          ElMessage.error(res.data.msg)\r\n        }\r\n      } catch (error) {\r\n        ElMessage.error('服务器连接失败')\r\n      } finally {\r\n        loading.value = false\r\n      }\r\n    }\r\n  })\r\n}\r\n\r\n// 注册逻辑\r\nconst handleRegister = async () => {\r\n  if (!regFormRef.value) return\r\n\r\n  await regFormRef.value.validate(async (valid) => {\r\n    if (valid) {\r\n      loading.value = true\r\n      try {\r\n        const res = await proxy.$request.post('/user/register', {\r\n          username: regForm.username,\r\n          password: regForm.password\r\n        })\r\n        if (res.data.code === '200') {\r\n          ElMessage.success('注册成功，请登录')\r\n          toggleMode() // 切换回登录页\r\n        } else {\r\n          ElMessage.error(res.data.msg)\r\n        }\r\n      } catch (error) {\r\n        ElMessage.error('服务器连接失败')\r\n      } finally {\r\n        loading.value = false\r\n      }\r\n    }\r\n  })\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n/* 定义 TNT 配色变量 */\r\n:root {\r\n  --tnt-yellow: #FAD02C; /* 爆米花黄 */\r\n  --tnt-black: #1A1A1A; /* 高级黑 */\r\n  --tnt-white: #ffffff;\r\n}\r\n\r\n.login-wrapper {\r\n  height: 100vh;\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  /* 背景使用浅黄与黄色的波点纹理 */\r\n  background-color: #fefbec;\r\n  background-image: radial-gradient(#FAD02C 20%, transparent 20%),\r\n  radial-gradient(#FAD02C 20%, transparent 20%);\r\n  background-size: 50px 50px;\r\n  background-position: 0 0, 25px 25px;\r\n}\r\n\r\n.login-box {\r\n  width: 800px;\r\n  height: 500px;\r\n  background: var(--tnt-white);\r\n  border-radius: 16px;\r\n  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);\r\n  display: flex;\r\n  overflow: hidden;\r\n  border: 4px solid var(--tnt-black); /* 黑色外