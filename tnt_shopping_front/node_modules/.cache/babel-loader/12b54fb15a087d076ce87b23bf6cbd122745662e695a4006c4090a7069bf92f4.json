ckground-color: #EEE;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  overflow: hidden;\r\n}\r\n\r\n.no-img {\r\n  font-family: 'Anton', sans-serif;\r\n  font-size: 30px;\r\n  color: rgba(0,0,0,0.1);\r\n  transform: rotate(-15deg);\r\n}\r\n\r\n/* 右信息 */\r\n.p-info-box {\r\n  flex: 1;\r\n  padding: 12px;\r\n  display: flex;\r\n  flex-direction: column;\r\n  justify-content: space-between;\r\n}\r\n\r\n.p-title {\r\n  font-weight: 900;\r\n  font-size: 15px;\r\n  line-height: 1.3;\r\n  color: #000;\r\n  /* 限制两行显示 */\r\n  display: -webkit-box;\r\n  -webkit-line-clamp: 2;\r\n  -webkit-box-orient: vertical;\r\n  overflow: hidden;\r\n}\r\n\r\n.p-meta {\r\n  margin-top: auto;\r\n}\r\n\r\n.p-price {\r\n  color: #000;\r\n}\r\n\r\n.symbol {\r\n  font-size: 14px;\r\n  font-weight: bold;\r\n}\r\n\r\n.val {\r\n  font-family: 'Anton', sans-serif;\r\n  font-size: 24px;\r\n  margin-left: 2px;\r\n}\r\n\r\n.p-stock {\r\n  font-size: 12px;\r\n  color: #666;\r\n  font-weight: bold;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: space-between;\r\n  margin-top: 4px;\r\n}\r\n\r\n.status-dot {\r\n  width: 8px;\r\n  height: 8px;\r\n  background: #4CAF50; /* 绿色充足 */\r\n  border-radius: 50%;\r\n  border: 1px solid #000;\r\n}\r\n.status-dot.low {\r\n  background: #F44336; /* 红色紧张 */\r\n}\r\n\r\n/* 下半部分：按钮组 */\r\n.card-actions {\r\n  height: 44px;\r\n  display: flex;\r\n}\r\n\r\n.btn {\r\n  flex: 1;\r\n  border: none;\r\n  font-weight: 900;\r\n  font-size: 13px;\r\n  cursor: pointer;\r\n  transition: all 0.2s;\r\n  letter-spacing: 0.5px;\r\n}\r\n\r\n/* 加入购物车：黄底黑字 */\r\n.btn-cart {\r\n  background: #FAD02C;\r\n  color: #000;\r\n  border-right: 2px solid #000;\r\n}\r\n.btn-cart:hover {\r\n  background: #FFE066;\r\n}\r\n\r\n/* 购买：黑底黄字 */\r\n.btn-buy {\r\n  background: #000;\r\n  color: #FAD02C;\r\n}\r\n.btn-buy:hover {\r\n  background: #333;\r\n  color: #FFF;\r\n}\r\n\r\n.empty-placeholder {\r\n  grid-column: span 2;\r\n  text-align: center;\r\n 