{"ast":null,"code":"import { ref, onMounted, getCurrentInstance } from 'vue';\nimport { ElMessage } from 'element-plus';\nimport { CaretRight } from '@element-plus/icons-vue';\nexport default {\n  __name: 'CategoryPage',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const {\n      proxy\n    } = getCurrentInstance();\n    const currentCategory = ref('棉花娃娃');\n    const productList = ref([]);\n    const loading = ref(false);\n\n    // 模拟图片背景色数组，让界面不单调\n    const bgColors = ['#FAD02C', '#FFD166', '#FFFCF0', '#E0E0E0'];\n\n    // 获取数据\n    const fetchProducts = async () => {\n      loading.value = true;\n      try {\n        const res = await proxy.$request.get('/product/list', {\n          params: {\n            category: currentCategory.value\n          }\n        });\n        if (res.data.code === '200') {\n          productList.value = res.data.data;\n        }\n      } catch (e) {\n        ElMessage.error('数据加载失败');\n      } finally {\n        loading.value = false;\n      }\n    };\n    const selectCategory = cat => {\n      if (currentCategory.value === cat) return;\n      currentCategory.value = cat;\n      fetchProducts();\n    };\n\n    // 动态背景逻辑\n    const getBg = item => {\n      if (item.imageUrl) {\n        return {\n          backgroundImage: `url(${item.imageUrl})`,\n          backgroundSize: 'cover'\n        };\n      }\n      // 随机分配一个背景色模拟图片\n      const color = bgColors[item.id % bgColors.length];\n      return {\n        backgroundColor: color\n      };\n    };\n    const addToCart = item => {\n      ElMessage.success(`[${item.name}] 已加入购物车`);\n    };\n    const buyNow = item => {\n      ElMessage.success(`准备购买: ${item.name}`);\n    };\n    onMounted(() => {\n      fetchProducts();\n    });\n    const __returned__ = {\n      proxy,\n      currentCategory,\n      productList,\n      loading,\n      bgColors,\n      fetchProducts,\n      selectCategory,\n      getBg,\n      addToCart,\n      buyNow,\n      ref,\n      onMounted,\n      getCurrentInstance,\n      get ElMessage() {\n        return ElMessage;\n      },\n      get CaretRight() {\n        return CaretRight;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","onMounted","getCurrentInstance","ElMessage","CaretRight","proxy","currentCategory","productList","loading","bgColors","fetchProducts","value","res","$request","get","params","category","data","code","e","error","selectCategory","cat","getBg","item","imageUrl","backgroundImage","backgroundSize","color","id","length","backgroundColor","addToCart","success","name","buyNow"],"sources":["E:/xianyu/tnt/tnt_shopping_front/src/components/CategoryPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"category-wrapper\">\r\n    <!-- 左侧：分类导航 (固定宽) -->\r\n    <div class=\"sidebar-nav\">\r\n      <div class=\"nav-title\">CATEGORY</div>\r\n\r\n      <div\r\n          class=\"nav-tab\"\r\n          :class=\"{ active: currentCategory === '棉花娃娃' }\"\r\n          @click=\"selectCategory('棉花娃娃')\"\r\n      >\r\n        <div class=\"tab-en\">PLUSH DOLL</div>\r\n        <div class=\"tab-cn\">棉花娃娃系列</div>\r\n        <div class=\"tab-icon\" v-show=\"currentCategory === '棉花娃娃'\">\r\n          <el-icon><CaretRight /></el-icon>\r\n        </div>\r\n      </div>\r\n\r\n      <div\r\n          class=\"nav-tab\"\r\n          :class=\"{ active: currentCategory === '小卡' }\"\r\n          @click=\"selectCategory('小卡')\"\r\n      >\r\n        <div class=\"tab-en\">PHOTO CARD</div>\r\n        <div class=\"tab-cn\">精选小卡系列</div>\r\n        <div class=\"tab-icon\" v-show=\"currentCategory === '小卡'\">\r\n          <el-icon><CaretRight /></el-icon>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- 右侧：商品展示 (自适应) -->\r\n    <div class=\"main-display\">\r\n      <div class=\"display-header\">\r\n        <h2 class=\"header-title\">{{ currentCategory === '棉花娃娃' ? 'DOLL COLLECTION' : 'CARD COLLECTION' }}</h2>\r\n        <span class=\"header-tag\">TOP 4 ITEMS</span>\r\n      </div>\r\n\r\n      <!-- 商品 2x2 网格 -->\r\n      <div class=\"product-grid\" v-loading=\"loading\">\r\n        <!-- 循环渲染商品卡片 -->\r\n        <div class=\"product-card\" v-for=\"item in productList\" :key=\"item.id\">\r\n\r\n          <!-- 上半部：内容展示 (Flex: 左图 右信息) -->\r\n          <div class=\"card-body\">\r\n            <!-- 左：商品图 (正方形) -->\r\n            <div class=\"p-image-box\" :style=\"getBg(item)\">\r\n              <span class=\"no-img\" v-if=\"!item.imageUrl\">TNT</span>\r\n            </div>\r\n            <!-- 右：信息列表 (纵向分布) -->\r\n            <div class=\"p-info-box\">\r\n              <div class=\"p-title\">{{ item.name }}</div>\r\n\r\n              <div class=\"p-meta\">\r\n                <div class=\"p-price\">\r\n                  <span class=\"symbol\">¥</span>\r\n                  <span class=\"val\">{{ item.price }}</span>\r\n                </div>\r\n                <div class=\"p-stock\">\r\n                  <span>库存: {{ item.stock }}</span>\r\n                  <span class=\"status-dot\" :class=\"{ 'low': item.stock < 50 }\"></span>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n\r\n          <!-- 下半部：操作按钮 (Flex: 50% 50%) -->\r\n          <div class=\"card-actions\">\r\n            <button class=\"btn btn-cart\" @click=\"addToCart(item)\">\r\n              加入购物车\r\n            </button>\r\n            <button class=\"btn btn-buy\" @click=\"buyNow(item)\">\r\n              立即购买\r\n            </button>\r\n          </div>\r\n\r\n        </div>\r\n\r\n        <!-- 空状态占位 -->\r\n        <div class=\"empty-placeholder\" v-if=\"!loading && productList.length === 0\">\r\n          暂无商品数据\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script setup>\r\nimport { ref, onMounted, getCurrentInstance } from 'vue'\r\nimport { ElMessage } from 'element-plus'\r\nimport { CaretRight } from '@element-plus/icons-vue'\r\n\r\nconst { proxy } = getCurrentInstance()\r\n\r\nconst currentCategory = ref('棉花娃娃')\r\nconst productList = ref([])\r\nconst loading = ref(false)\r\n\r\n// 模拟图片背景色数组，让界面不单调\r\nconst bgColors = ['#FAD02C', '#FFD166', '#FFFCF0', '#E0E0E0']\r\n\r\n// 获取数据\r\nconst fetchProducts = async () => {\r\n  loading.value = true\r\n  try {\r\n    const res = await proxy.$request.get('/product/list', {\r\n      params: { category: currentCategory.value }\r\n    })\r\n    if (res.data.code === '200') {\r\n      productList.value = res.data.data\r\n    }\r\n  } catch (e) {\r\n    ElMessage.error('数据加载失败')\r\n  } finally {\r\n    loading.value = false\r\n  }\r\n}\r\n\r\nconst selectCategory = (cat) => {\r\n  if (currentCategory.value === cat) return\r\n  currentCategory.value = cat\r\n  fetchProducts()\r\n}\r\n\r\n// 动态背景逻辑\r\nconst getBg = (item) => {\r\n  if (item.imageUrl) {\r\n    return { backgroundImage: `url(${item.imageUrl})`, backgroundSize: 'cover' }\r\n  }\r\n  // 随机分配一个背景色模拟图片\r\n  const color = bgColors[item.id % bgColors.length]\r\n  return { backgroundColor: color }\r\n}\r\n\r\nconst addToCart = (item) => {\r\n  ElMessage.success(`[${item.name}] 已加入购物车`)\r\n}\r\n\r\nconst buyNow = (item) => {\r\n  ElMessage.success(`准备购买: ${item.name}`)\r\n}\r\n\r\nonMounted(() => {\r\n  fetchProducts()\r\n})\r\n</script>\r\n\r\n<style scoped>\r\n@import url('https://fonts.googleapis.com/css2?family=Anton&family=Roboto:wght@400;700;900&display=swap');\r\n\r\n.category-wrapper {\r\n  display: flex;\r\n  gap: 30px;\r\n  max-width: 1100px;\r\n  margin: 0 auto;\r\n  min-height: 500px;\r\n}\r\n\r\n/* --- 左侧导航 --- */\r\n.sidebar-nav {\r\n  width: 240px;\r\n  flex-shrink: 0;\r\n  background: #FFF;\r\n  border: 3px solid #000;\r\n  height: fit-content;\r\n}\r\n\r\n.nav-title {\r\n  background: #000;\r\n  color: #FAD02C;\r\n  font-family: 'Anton', sans-serif;\r\n  font-size: 24px;\r\n  padding: 15px 20px;\r\n  letter-spacing: 2px